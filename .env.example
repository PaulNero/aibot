# Database - SQLite
DATABASE_URL=sqlite:///db/sqlite.db

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379/0

# === БОТ #1: Telethon-клиент (чтение и обработка) ===
# Получить на https://my.telegram.org/ (API Development tools)
# TELEGRAM_API_ID=your_api_id
# TELEGRAM_API_HASH=your_api_hash
# TELEGRAM_SESSION_NAME=aibot_session

# === БОТ #1: Publisher-бот (публикация постов) ===
# 1. Создайте бота через @BotFather в Telegram: /newbot
# 2. Получите токен от BotFather
# 3. Добавьте бота администратором в ваш Telegram канал
TELEGRAM_PUBLISHER_BOT_TOKEN=your_publisher_bot_token_from_botfather

# === БОТ #2: Admin-бот (управление системой) ===
# Отключен, функционал будет пересмотрен
# 1. Создайте второго бота через @BotFather: /newbot
# 2. Получите токен для админ бота
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_from_botfather
# 3. Добавьте ваш Telegram user ID (узнать у @userinfobot)
TELEGRAM_ADMIN_USER_IDS=your_telegram_user_id

# === Telegram канал для публикации ===
# Создайте канал и добавьте Publisher-бота как администратора
TELEGRAM_CHANNEL_USERNAME=@your_channel_username

# === Admin Bot (опционально - для управления системой через Telegram) ===
# Отключен, функционал будет пересмотрен
# Раскомментируйте и настройте если хотите управлять ботом через Telegram
# TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_from_botfather
# TELEGRAM_ADMIN_USER_IDS=your_telegram_user_id

# Telegram API (опционально, для парсинга каналов через Telethon)
# Получить на https://my.telegram.org/auth
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_SESSION_NAME=ai_bot_session

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# === Альтернативные AI провайдеры (для отказоустойчивости) ===
# Локальная LLM через Ollama (установите https://ollama.ai/)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2
# USE_LOCAL_LLM=false

# Бесплатная альтернатива через Together AI (регистрация на https://together.ai/)
# TOGETHER_API_KEY=your_together_api_key

# Proxy (опционально)
PROXY_URL=http://your_proxy:port

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Settings
PARSE_INTERVAL_MINUTES=30
DEBUG=True