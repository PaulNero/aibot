# Database - SQLite
DATABASE_URL=sqlite:///db/sqlite.db

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379/0

# === БОТ #1: Telethon-клиент (чтение и обработка) ===
# Получить на https://my.telegram.org/ (API Development tools)
# TELEGRAM_API_ID=your_api_id
# TELEGRAM_API_HASH=your_api_hash
# TELEGRAM_SESSION_NAME=aibot_session

# === БОТ #2: Publisher-бот (публикация) ===
# Получить у @BotFather в Telegram (/newbot)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# === Telegram канал для публикации ===
# Создайте канал и добавьте Publisher-бота как администратора
TELEGRAM_CHANNEL_USERNAME=@your_channel_username

# Telegram Bot API (для публикации постов)
# 1. Создайте бота через @BotFather в Telegram
# 2. Получите токен от BotFather
# 3. Добавьте бота администратором в канал @pn_dev_channel
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHANNEL_USERNAME=@pn_dev_channel

# Telegram API (опционально, для парсинга каналов через Telethon)
# TELEGRAM_API_ID=your_api_id
# TELEGRAM_API_HASH=your_api_hash

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Proxy (опционально)
PROXY_URL=http://your_proxy:port

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Settings
PARSE_INTERVAL_MINUTES=30
DEBUG=True